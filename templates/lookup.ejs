<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<title>User Profile Query</title>
    <link rel="stylesheet" href="/templates/searchStyle.css" type="text/css">
    <script>
        function adjustText() {
            if ("<%- flag %>" === "delete")
                document.getElementById("submitBtn").value = "Delete Profile"
        }
        function confirmDelete() {
            if ("<%- flag %>" === "delete") {
                /* "successful", meaning if profile with given info exists */
                let msg = "If a profile with this user info exists, the deletion will go through.\n";
                msg += "Are you sure you want to delete this BMI profile? (This action cannot be undone!)";
                return confirm(msg);
            }
        }
    </script>
</head>

<body onload="adjustText()">
    <div id = "main3">
        <div id = "d5">LOOKUP USER</div>
        <div id = "sr2">
        <div id = "sr1">
            <br>
            <div id = "sr3">
            <label>Enter the user information to lookup profile</label>
            <br><br>
            <form action="<%- formAction %>" method="post" onsubmit="return confirmDelete()">
                <label>Name:</label><br><br>
                <input type="text" name="qName" id="qName" autofocus required><br><br>
                <label>Email:</label><br><br>
                <input type="email" name="qEmail" id="qEmail" required> <br><br>
                <input type="submit" value="Find Profile"/>
            </form>
            </div>
        </div>
        </div>
        </div>
    <a href="/">HOME</a>
</body>

</html>

